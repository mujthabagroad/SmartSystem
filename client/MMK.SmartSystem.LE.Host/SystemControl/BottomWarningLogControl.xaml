<UserControl x:Class="MMK.SmartSystem.LE.Host.SystemControl.BottomWarningLogControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MMK.SmartSystem.LE.Host.SystemControl"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="1400" Background="#2a2f34">
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="{Binding WarningLogStr}" Foreground="Red" FontSize="18"/>
        </StackPanel>
    </Grid>
</UserControl>
