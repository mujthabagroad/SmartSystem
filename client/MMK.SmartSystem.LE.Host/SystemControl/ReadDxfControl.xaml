<UserControl x:Class="MMK.SmartSystem.LE.Host.SystemControl.ReadDxfControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cc="clr-namespace:MMK.SmartSystem.LE.Host.CustomControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="Black">
    <DockPanel>
        <Canvas DockPanel.Dock="Top" Height="25" Background="#FFEFDCDC">
            <Button Content="打开文件"  Click="Button_Click" Width="70" Height="25" />
            <TextBox Canvas.Left="80" Width="100" Height="25" x:Name="line1"/>
            <TextBox Canvas.Left="176" Width="100" Height="25" x:Name="line2" Canvas.Top="0" />
            <TextBox Canvas.Left="263" Width="100" Height="25" x:Name="point12" Canvas.Top="0" />
        </Canvas>
        <Canvas x:Name="Benchmark">
            <cc:ZoomableCanvas x:Name="MyCanvas" 
                                    RealizationLimit="1000"
                                    RealizationRate="10"
                                    RealizationPriority="Background" Width="750" Height="450">
            </cc:ZoomableCanvas>
        </Canvas>
    </DockPanel>
</UserControl>
