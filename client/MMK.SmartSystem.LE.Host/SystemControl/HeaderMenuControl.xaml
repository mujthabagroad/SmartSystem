<UserControl x:Class="MMK.SmartSystem.LE.Host.SystemControl.HeaderMenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MMK.SmartSystem.LE.Host.SystemControl"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="600">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="{Binding Translate.SmartSystem.Chinese}"  Width="80" Height="25" Margin="2" x:Name="CnBtn" Click="CnBtn_Click"/>
            <Button Content="{Binding Translate.SmartSystem.English}"  Width="80" Height="25" Margin="2" x:Name="EnBtn" Click="EnBtn_Click"/>
            <Button Content="{Binding Translate.SmartSystem.Login}"  Width="80" Height="25" Margin="2" x:Name="LoginBtn" Command="{Binding OpenCommand}" Visibility="{Binding LoginBtnVisibility}"/>
            <Button Content="{Binding Translate.SmartSystem.ChangeAccout}"  Width="80" Height="25" Margin="2" x:Name="ChangeLoginBtn" Command="{Binding OpenCommand}" Visibility="{Binding ChangeAccountBtnVisibility}"/>
        </StackPanel>
    </Grid>
</UserControl>
