<Window x:Class="MMK.SmartSystem.LE.Host.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MMK.SmartSystem.LE.Host.SystemControl"
        xmlns:embed="clr-namespace:MMK.SmartSystem.LE.Host.SystemControl.Embed"
        mc:Ignorable="d"
        Title="MainWindow" Height="768" Width="1366"
        WindowStartupLocation="CenterScreen" WindowStyle="None" >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <embed:AppContainer x:Name="ctnTest"  Width="1366" Height="768" BorderThickness="0"/>
        <Viewbox Stretch="None" x:Name="viewBox" Width="{Binding ActualWidth, ElementName=window, Mode=OneWay}" Height="{Binding ActualHeight, ElementName=window, Mode=OneWay}">
            <local:MainHomeControl x:Name="mainHome" Width="{Binding ActualWidth, ElementName=window, Mode=OneWay}" Height="{Binding ActualHeight, ElementName=window, Mode=OneWay}" ></local:MainHomeControl>
        </Viewbox>
    </Grid>
</Window>
