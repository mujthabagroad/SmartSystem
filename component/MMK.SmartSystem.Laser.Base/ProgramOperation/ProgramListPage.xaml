<Page x:Class="MMK.SmartSystem.Laser.Base.ProgramOperation.ProgramListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MMK.SmartSystem.Laser.Base.ProgramOperation"
      xmlns:base="clr-namespace:MMK.SmartSystem.Common.Base;assembly=MMK.SmartSystem.Common"
      xmlns:cc="clr-namespace:MMK.SmartSystem.Laser.Base.CustomControl"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="1200" Foreground="White" Background="#2a2f34" FontSize="16"
      Title="ProgramListPage">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/MMK.SmartSystem.Laser.Base;component/Style/BtnStyleDictionary.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="#707374"/>
            </Style>
            <Style TargetType="TextBox">
                <Setter Property="Foreground" Value="#848a8f"/>
                <Setter Property="Background" Value="#202328"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect ShadowDepth="0" BlurRadius="5" Color="Black"/>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style TargetType="RichTextBox">
                <Setter Property="Foreground" Value="#848a8f"/>
                <Setter Property="Background" Value="#202328"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect ShadowDepth="0" BlurRadius="5" Color="Black"/>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style TargetType="Canvas">
                <Setter Property="Background" Value="#202328"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect ShadowDepth="0" BlurRadius="5" Color="Black"/>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="10" Grid.Column="0">
            <TextBlock Text="CNC已用程序数及容量" Margin="5"/>
            <TextBox Margin="5,5,5,15" Text="程序数：4 容量：160MB"/>
            <TextBlock Text="CNC已用程序存储目录树" Margin="5"/>
            <RichTextBox Margin="5,5,5,15" FontSize="15" Height="120">
                <FlowDocument>
                    <Paragraph>
                        <Run Text="--"/>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
            <TextBlock Text="文件夹" Margin="5"/>
            <TextBox Margin="5,5,5,15" Text="{Binding Path}" />
            <TextBlock Text="IPC程序存储目录树" Margin="5"/>
            <RichTextBox Margin="5,5,5,15" FontSize="15" Height="110">
                <FlowDocument>
                    <Paragraph>
                        <Run Text="--"/>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
        </StackPanel>
        <StackPanel Margin="10" Grid.Column="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="名称"  Margin="47,0,0,0" />
                    <TextBlock Text="|" Margin="40,0,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="容量"  Margin="47,0,0,0"/>
                    <TextBlock Text="|" Margin="40,0,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock Text="日期/时间" TextAlignment="Center"/>
                </StackPanel>
            </Grid>
            <DataGrid ItemsSource="{Binding ProgramList}" x:Name="CarDataViewGrid" Margin="0 6 0 10" Height="360" Background="#2a2f34" Width="375" 
                      PreviewMouseLeftButtonDown="CarDataViewGrid_PreviewMouseLeftButtonDown">
                <DataGrid.Style>
                    <Style TargetType="DataGrid">
                        <!--网格线颜色-->
                        <Setter Property="CanUserResizeColumns" Value="false"/>
                        <Setter Property="HeadersVisibility" Value="None"/>
                        <Setter Property="CanUserAddRows" Value="False"/>
                        <Setter Property="CanUserDeleteRows" Value="False"/>
                        <Setter Property="HorizontalGridLinesBrush">
                            <Setter.Value>
                                <SolidColorBrush Color="#FF383838"/>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="VerticalGridLinesBrush">
                            <Setter.Value>
                                <SolidColorBrush Color="#FF383838"/>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.Style>
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                        <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
                        <Setter Property="Background" Value="White"></Setter>
                        <Setter Property="Foreground" Value="#616577"></Setter>
                        <Setter Property="BorderThickness" Value="1"></Setter>
                        <Setter Property="BorderBrush" Value="#FFAAAAAA"></Setter>
                        <Setter Property="Width" Value="124" />
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="White" />
                        <Setter Property="Height" Value="40"/>
                        <Setter Property="Foreground" Value="#616577" />
                        <Setter Property="BorderThickness" Value="1"></Setter>
                        <Setter Property="BorderBrush" Value="#FFAAAAAA"></Setter>
                    </Style>
                </DataGrid.RowStyle>
                <!--<DataGrid.Columns>
                    <DataGridTextColumn Header="名称" Binding="{Binding Name}" IsReadOnly="True" Width="122"/>
                    <DataGridTextColumn Header="容量" Binding="{Binding Size}" IsReadOnly="True" Width="125"/>
                    <DataGridTextColumn Header="日期/时间" Binding="{Binding CreateTime}" IsReadOnly="True" Width="125"/>
                </DataGrid.Columns>-->
            </DataGrid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                <Button Style="{StaticResource BtnStyle}" Width="110" Height="40" Margin="5 10 10 10" Content="M文档"/>
                <Button Style="{StaticResource BtnStyle}" Width="110" Height="40" Margin="5 10 10 10" Content="添加文档"/>
                <Button Style="{StaticResource BtnStyle}" Width="110" Height="40" Margin="5 10 10 10" Content="删除文档"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Margin="10" Grid.Column="2">
            <TextBlock Text="程序缩略图显示" Margin="10,10,10,0"/>
            <Canvas x:Name="Benchmark" Height="280" Margin="10">
                <cc:ZoomableCanvas x:Name="MyCanvas" 
                                    RealizationLimit="1000"
                                    RealizationRate="10"
                                    RealizationPriority="Background" >
                </cc:ZoomableCanvas>
            </Canvas>
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="程序名称:FJFDJS-001" Margin="0 0 0 8" FontSize="13"/>
                    <TextBlock Text="材料类型:合成金属" Margin="0 0 0 8" FontSize="13"/>
                    <TextBlock Text="板材厚度:28mm" Margin="0 0 0 8" FontSize="13"/>
                    <TextBlock Text="板材尺寸:150cm * 250cm" Margin="0 0 0 8" FontSize="13"/>
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <TextBlock Text="已用尺寸:99cm/150cm" Margin="0 0 0 8" FontSize="13"/>
                    <TextBlock Text="切割总长度:21cm/250cm" Margin="0 0 0 8" FontSize="13"/>
                    <TextBlock Text="穿孔次数:6" Margin="0 0 0 8" FontSize="13"/>
                    <TextBlock Text="加工时间:8小时35分47秒" Margin="0 0 0 8" FontSize="13"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</Page>
