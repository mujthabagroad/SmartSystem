<Page x:Class="MMK.SmartSystem.Laser.Base.ProgramOperation.ProgramListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MMK.SmartSystem.Laser.Base.ProgramOperation"
      xmlns:base="clr-namespace:MMK.SmartSystem.Common.Base;assembly=MMK.SmartSystem.Common"
      xmlns:cc="clr-namespace:MMK.SmartSystem.Laser.Base.CustomControl"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="1200" Foreground="White" Background="#2a2f34" FontSize="16"
      Title="ProgramListPage">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/MMK.SmartSystem.Laser.Base;component/Style/BtnStyleDictionary.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="#707374"/>
            </Style>
            <Style TargetType="TextBox">
                <Setter Property="Foreground" Value="#848a8f"/>
                <Setter Property="Background" Value="#202328"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect ShadowDepth="0" BlurRadius="5" Color="Black"/>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style TargetType="RichTextBox">
                <Setter Property="Foreground" Value="#848a8f"/>
                <Setter Property="Background" Value="#202328"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect ShadowDepth="0" BlurRadius="5" Color="Black"/>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style TargetType="Canvas">
                <Setter Property="Background" Value="#202328"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect ShadowDepth="0" BlurRadius="5" Color="Black"/>
                    </Setter.Value>
                </Setter>
            </Style>

            <!--DataGrid样式-->
            <Style TargetType="DataGrid">
                <!--网格线颜色-->
                <Setter Property="CanUserAddRows" Value="False" />
                <Setter Property="CanUserDeleteRows" Value="False" />
                <Setter Property="CanUserResizeColumns" Value="false"/>
                <Setter Property="Background" Value="#FFF7EDAD" />
                <Setter Property="BorderBrush" Value="Transparent" />
                <Setter Property="HeadersVisibility" Value="None" />
                <Setter Property="HorizontalGridLinesBrush">
                    <Setter.Value>
                        <SolidColorBrush Color="#d6c79b"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="VerticalGridLinesBrush">
                    <Setter.Value>
                        <SolidColorBrush Color="#d6c79b"/>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style TargetType="DataGridCell">
                
            </Style>
            
            <!--行样式触发-->
            <!--背景色改变必须先设置cellStyle 因为cellStyle会覆盖rowStyle样式-->
            <Style  TargetType="DataGridRow">
                <Setter Property="Background" Value="#F2F2F2" />
                <Setter Property="Height" Value="25"/>
                <Setter Property="Foreground" Value="#CDD3D7" />
                <Style.Triggers>
                    <!--隔行换色-->
                    <Trigger Property="AlternationIndex" Value="0" >
                        <Setter Property="Background" Value="#202328" />
                    </Trigger>
                    <Trigger Property="AlternationIndex" Value="1" >
                        <Setter Property="Background" Value="#2a2f34" />
                    </Trigger>

                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#1600A3"/>
                        <!--<Setter Property="Foreground" Value="White"/>-->
                    </Trigger>

                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="Foreground" Value="Black"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </Page.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="10" Grid.Column="0">
            <TextBlock Text="CNC已用程序数及容量" Margin="5"/>
            <TextBox Margin="5,5,5,15" Text="程序数：4 容量：160MB"/>
            <TextBlock Text="CNC已用程序存储目录树" Margin="5"/>
            <RichTextBox Margin="5,5,5,15" FontSize="15" Height="120">
                <FlowDocument>
                    <Paragraph>
                        <Run Text="--"/>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
            <TextBlock Text="文件夹" Margin="5"/>
            <TextBox Margin="5,5,5,15" Text="{Binding Path}" />
            <TextBlock Text="IPC程序存储目录树" Margin="5"/>
            <RichTextBox Margin="5,5,5,15" FontSize="15" Height="110">
                <FlowDocument>
                    <Paragraph>
                        <Run Text="--"/>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
        </StackPanel>
        <StackPanel Margin="10" Grid.Column="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="名称"  Margin="47,0,0,0" />
                    <TextBlock Text="|" Margin="40,0,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="容量"  Margin="47,0,0,0"/>
                    <TextBlock Text="|" Margin="40,0,0,0"/>
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock Text="日期/时间" TextAlignment="Center"/>
                </StackPanel>
            </Grid>
            <DataGrid ItemsSource="{Binding ProgramList}" x:Name="CarDataViewGrid" Margin="0 6 0 10" Height="360" Background="#2a2f34" Width="375" 
                       AlternationCount="2" SelectionChanged="CarDataViewGrid_SelectionChanged" IsReadOnly="True" FontSize="13">
            </DataGrid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                <Button Style="{StaticResource BtnStyle}" Width="110" Height="40" Margin="5 10 10 10" Content="M文档" Click="Button_Click"/>
                <Button Style="{StaticResource BtnStyle}" Width="110" Height="40" Margin="5 10 10 10" Content="添加文档"/>
                <Button Style="{StaticResource BtnStyle}" Width="110" Height="40" Margin="5 10 10 10" Content="删除文档"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Margin="10" Grid.Column="2">
            <TextBlock Text="程序缩略图显示" Margin="10,10,10,0"/>
            <Canvas x:Name="Benchmark" Height="280" Width="360" Margin="10" >
                <cc:ZoomableCanvas x:Name="MyCanvas" 
                                    RealizationLimit="1000"
                                    RealizationRate="10"
                                    RealizationPriority="Background" Height="280" Width="360" >
                </cc:ZoomableCanvas>
            </Canvas>
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="{Binding SelectedName}" Margin="0 0 0 8" FontSize="12"/>
                    <TextBlock Text="材料类型:合成金属" Margin="0 0 0 8" FontSize="12"/>
                    <TextBlock Text="板材厚度:28mm" Margin="0 0 0 8" FontSize="12"/>
                    <TextBlock Text="板材尺寸:150cm*250cm" Margin="0 0 0 8" FontSize="12"/>
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <TextBlock Text="已用尺寸:99cm/150cm" Margin="0 0 0 8" FontSize="12"/>
                    <TextBlock Text="切割总长度:21cm/250cm" Margin="0 0 0 8" FontSize="12"/>
                    <TextBlock Text="穿孔次数:6" Margin="0 0 0 8" FontSize="13"/>
                    <TextBlock Text="加工时间:8小时35分47秒" Margin="0 0 0 8" FontSize="12"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</Page>
