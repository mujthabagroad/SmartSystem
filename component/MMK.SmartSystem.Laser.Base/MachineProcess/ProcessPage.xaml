<Page x:Class="MMK.SmartSystem.Laser.Base.MachineProcess.ProcessPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MMK.SmartSystem.Laser.Base.MachineProcess"
      xmlns:uc="clr-namespace:MMK.SmartSystem.Laser.Base.MachineProcess.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="510" d:DesignWidth="1300" Background="#2a2f34" Foreground="#787b8c" FontSize="20"
      Title="ProcessPage">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/MMK.SmartSystem.Laser.Base;component/Style/BtnStyleDictionary.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="Button" x:Key="TabBtn">
                <Setter Property="Foreground" Value="#787b8c" />
                <Setter Property="Background" Value="#202328" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="Margin" Value="10,0,0,0" />
                <Style.Triggers>
                    <Trigger Property="Button.IsPressed" Value="True">
                        <Setter Property="Background" Value="Black"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition />
            <RowDefinition Height="116"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Width="186" Height="50" Content="切割" Style="{StaticResource TabBtn}"/>
            <Button Width="186" Height="50" Content="穿孔" Style="{StaticResource TabBtn}"/>
            <Button Width="186" Height="50" Content="尖角切割" Style="{StaticResource TabBtn}"/>
            <Button Width="186" Height="50" Content="功率控制" Style="{StaticResource TabBtn}"/>
            <Button Style="{StaticResource BtnStyle}" Content="编辑" Height="32" Width="152" Margin="320 0 0 0"/>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <uc:InciseProcessControl />
        </StackPanel>
        <StackPanel Grid.Row="2">
            <uc:ProcessOptionsControl />
        </StackPanel>
    </Grid>
</Page>
