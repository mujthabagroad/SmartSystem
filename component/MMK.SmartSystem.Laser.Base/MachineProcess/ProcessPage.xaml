<Page x:Class="MMK.SmartSystem.Laser.Base.MachineProcess.ProcessPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MMK.SmartSystem.Laser.Base.MachineProcess"
      xmlns:uc="clr-namespace:MMK.SmartSystem.Laser.Base.MachineProcess.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="510" d:DesignWidth="1300" Background="#2a2f34" Foreground="#787b8c" FontSize="20"
      Title="ProcessPage">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/MMK.SmartSystem.Laser.Base;component/Style/BtnStyleDictionary.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="ToggleButton" x:Key="tBtn">
                <Setter Property="Foreground" Value="#787b8c" />
                <Setter Property="Background" Value="#202328" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="Margin" Value="10,0,0,0" />
            </Style>
        </ResourceDictionary>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition />
            <RowDefinition Height="116"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Column="0">
                <ToggleButton Width="186" Height="50" Content="切割" Style="{StaticResource tBtn}" x:Name="CuttingDataListBtn" />
                <ToggleButton Width="186" Height="50" Content="穿孔" Style="{StaticResource tBtn}" x:Name="PiercingDataListBtn" />
                <ToggleButton Width="186" Height="50" Content="尖角切割" Style="{StaticResource tBtn}" x:Name="EdgeCuttingBtn" />
                <ToggleButton Width="186" Height="50" Content="功率控制" Style="{StaticResource tBtn}" x:Name="SlopeControlDataListBtn" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Column="2">
                <Button Style="{StaticResource BtnStyle}" Content="编辑" Height="35" Width="152" Margin="30 0 0 0" x:Name="Edit"/>
            </StackPanel>
        </Grid>
        <StackPanel Grid.Row="1">
            <uc:ProcessListControl />
        </StackPanel>
        <StackPanel Grid.Row="2">
            <uc:ProcessOptionsControl />
        </StackPanel>
    </Grid>
</Page>
