<Page x:Class="MMK.SmartSystem.Laser.Base.MachineMonitor.MachineMonitorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MMK.SmartSystem.Laser.Base.MachineMonitor"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="1200"
      Title="MachineMonitorPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition MaxHeight="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        
        <local:CoordinateControl Width="600" Height="200" Grid.Column="0" Grid.Row="0" x:Name="coordinateControl"/>
        <local:ProgramPathControl Width="600" Height="500" Grid.Column="1" Grid.RowSpan="3" x:Name="programPathControl"/>

        <local:WarningListControl Grid.Column="0" Grid.Row="2" BorderBrush="Black" BorderThickness="1" Height="230"/>
        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal">
            <Button x:Name="btn" Content="GO" Click="Btn_Click" Width="100" Margin="10"/>
        </StackPanel>
    </Grid>
</Page>
